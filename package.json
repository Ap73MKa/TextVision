{
  "name": "text-vision",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev-mobile": "turbo run dev --filter=mobile --filter=backend --env-mode=loose",
    "dev-desk": "turbo run dev --filter=desktop",
    "dev-back": "turbo run dev --filter=backend",
    "lint": "turbo run lint",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.2.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.27",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
